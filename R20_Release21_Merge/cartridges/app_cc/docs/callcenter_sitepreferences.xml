<?xml version="1.0" encoding="UTF-8"?>
<metadata xmlns="http://www.demandware.com/xml/impex/metadata/2006-10-31">

    <type-extension type-id="SitePreferences">
        <custom-attribute-definitions>
           
         
            <attribute-definition attribute-id="callcenter_multipleshippingaddress_enabled">
                <display-name xml:lang="x-default">Multiple Shipping Addresses Enabled</display-name>
                <description xml:lang="x-default">This parameter specifies if the order detail screen should display a single Shipping Address in a block format or Multiple Shipping Addresses per product line item.&#13;
&#13;
True  :  Displays a Shipping Address per line item&#13;
False :  Displays one Shipping Address</description>
                <type>boolean</type>
                <default-value>false</default-value>
            </attribute-definition>
            
            <attribute-definition attribute-id="callcenter_evoucher_limit">
                <display-name xml:lang="x-default">eVoucher Amount Limit</display-name>
                <description xml:lang="x-default">This parameter defines the maximum amount that an eVoucher can be created for. The default is 0, which is no limit</description>
                <type>double</type>
                <field-length>0</field-length>
            </attribute-definition>
            
 
           
            <attribute-definition attribute-id="callcenter_customersearch_pagesize">
                <display-name xml:lang="x-default">Customer Search Result Page Size</display-name>
                <description xml:lang="x-default">This parameter defines the amount of customers to display per page for the customer search results&#13;
&#13;
Default : 8</description>
                <type>int</type>
                <field-length>0</field-length>
                <default-value>8</default-value>
            </attribute-definition>
            
            <attribute-definition attribute-id="callcenter_customerorder_pagesize">
                <display-name xml:lang="x-default">Customer Order Page Size</display-name>
                <description xml:lang="x-default">This parameter specifies the amount of orders to display per page on the customer order detail screen&#13;
&#13;
Default : 8</description>
                <type>int</type>
                <field-length>0</field-length>
                <default-value>8</default-value>
            </attribute-definition>
            
            <attribute-definition attribute-id="callcenter_evouchers_enabled">
                <display-name xml:lang="x-default">eVouchers Enabled</display-name>
                <description xml:lang="x-default">The eVouchers Enabled specifies if the Agent has access to create and send eVouchers/Gift Certificates to customers&#13;
&#13;
True  : eVouchers button is displayed on customer detail screen&#13;
False : eVouchers button is hidden</description>
                <type>boolean</type>
                <default-value>true</default-value>
            </attribute-definition>
            
            <attribute-definition attribute-id="callcenter_securityquestion_enabled">
                <display-name xml:lang="x-default">Security Question Enabled</display-name>
                <description xml:lang="x-default">This parameter specifies is the customer details screen should display the customers security question and answer&#13;
&#13;
True  : The customers security question and answer is displayed&#13;
False : The customers security question and answer is hidden</description>
                <type>boolean</type>
                <default-value>true</default-value>
            </attribute-definition>
           
        </custom-attribute-definitions>
        <group-definitions>
            
            <attribute-group group-id="Callcenter">
                <display-name xml:lang="x-default">CallCenter</display-name>
                <attribute attribute-id="callcenter_evouchers_enabled"/>
                <attribute attribute-id="callcenter_customerorder_pagesize"/>
                <attribute attribute-id="callcenter_customersearch_pagesize"/>
                <attribute attribute-id="callcenter_multipleshippingaddress_enabled"/>
                <attribute attribute-id="callcenter_securityquestion_enabled"/>
                
            </attribute-group>
        </group-definitions>
    </type-extension>
</metadata>
