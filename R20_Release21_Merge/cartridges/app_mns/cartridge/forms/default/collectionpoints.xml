			<!-- gift options -->
	<field formid="isGift" label="forms.checkout.shipment.isgift" type="boolean" default-value="false" binding="gift" mandatory="false" />
	<field formid="giftMessage" label="" type="string" binding="giftMessage" mandatory="false" /> <!-- description="forms.checkout.shipment.giftmessage.hint"-->
	<action formid="send" valid-form="true"/>
</form>