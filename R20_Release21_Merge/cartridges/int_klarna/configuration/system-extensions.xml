                <display-name xml:lang="x-default">Integration mode</display-name>
                <description xml:lang="x-default">Advanced or standard integration. With standard you need to use Klarna Online to activate invoices</description>
                <type>enum-of-string</type>
                <mandatory-flag>true</mandatory-flag>
                <externally-managed-flag>false</externally-managed-flag>
                <value-definitions>
                    <value-definition default="true">
                        <display xml:lang="sv-SE">standard</display>
                        <value>standard</value>
                    </value-definition>
                    <value-definition>
                        <display xml:lang="sv-SE">advanced</display>
                        <value>advanced</value>
                    </value-definition>
                </value-definitions>
            </attribute-definition>
