                <type>enum-of-string</type>
                <mandatory-flag>true</mandatory-flag>
                <externally-managed-flag>false</externally-managed-flag>
                <value-definitions>
                    <value-definition default="true">
                        <display xml:lang="sv-SE">Live</display>
                        <value>https://payment.klarna.com</value>
                    </value-definition>
                    <value-definition>
                        <display xml:lang="sv-SE">Beta-test</display>
                        <value>http://beta-test.klarna.com</value>
                    </value-definition>
                </value-definitions>
            </attribute-definition>
